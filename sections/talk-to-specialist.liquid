{%- style -%}
  .specialist-section {
    padding: clamp(32px, 6vw, 64px) 0;
    background: linear-gradient(135deg, #f6fef8 0%, #f0fdf4 100%);
  }

  .specialist-section__inner {
    display: flex;
    flex-direction: column;
    gap: 2.4rem;
    align-items: center;
    justify-content: center;
  }

  .specialist-section__image {
    position: relative;
    border-radius: 2rem;
    overflow: hidden;
    box-shadow: 
      0 4px 12px rgba(19, 40, 31, 0.08),
      0 8px 24px rgba(19, 40, 31, 0.06),
      0 16px 48px rgba(19, 40, 31, 0.04);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (hover: hover) and (pointer: fine) {
    .specialist-section__image:hover {
      transform: translateY(-4px) scale(1.02);
      box-shadow: 
        0 8px 24px rgba(19, 40, 31, 0.12),
        0 16px 48px rgba(19, 40, 31, 0.08),
        0 24px 64px rgba(19, 40, 31, 0.06);
    }
  }

  .specialist-section__image img {
    max-width: 420px;
    width: 100%;
    height: auto;
    object-fit: contain;
    display: block;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (hover: hover) and (pointer: fine) {
    .specialist-section__image:hover img {
      transform: scale(1.05);
    }
  }

  .specialist-section__content {
    text-align: center;
    max-width: 520px;
    background: rgba(255, 255, 255, 0.8);
    padding: 3rem;
    border-radius: 2rem;
    box-shadow: 
      0 2px 8px rgba(19, 40, 31, 0.06),
      0 4px 16px rgba(19, 40, 31, 0.04);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (hover: hover) and (pointer: fine) {
    .specialist-section__content:hover {
      transform: translateY(-2px);
      box-shadow: 
        0 4px 16px rgba(19, 40, 31, 0.1),
        0 8px 32px rgba(19, 40, 31, 0.06);
    }
  }

  .specialist-section__heading {
    font-size: clamp(2.4rem, 3vw, 3.2rem);
    margin: 0 0 1.2rem;
    color: #0b3b49;
    font-weight: 700;
    transition: color 0.3s ease;
  }

  .specialist-section__email {
    display: inline-block;
    font-size: 1.8rem;
    font-weight: 700;
    color: #1f5bff;
    text-decoration: none;
    margin: 1.6rem 0;
    text-align: center;
    padding: 0.8rem 1.6rem;
    border-radius: 1.2rem;
    background: rgba(31, 91, 255, 0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .specialist-section__email::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease;
  }

  .specialist-section__email:hover,
  .specialist-section__email:focus-visible {
    text-decoration: none;
    background: rgba(31, 91, 255, 0.15);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(31, 91, 255, 0.2);
  }

  .specialist-section__email:hover::before {
    left: 100%;
  }

  .specialist-section__description {
    margin: 0;
    font-size: 1.6rem;
    color: #0b3b49;
    line-height: 1.6;
    font-weight: 500;
  }

  @media screen and (min-width: 900px) {
    .specialist-section__inner {
      flex-direction: row;
      justify-content: space-between;
      gap: 4rem;
      align-items: center;
    }

    .specialist-section__content {
      text-align: left;
      max-width: 480px;
      padding: 3.5rem;
    }

    .specialist-section__email {
      text-align: left;
      display: inline-block;
    }
  }
{%- endstyle -%}

<section class="specialist-section">
  <div class="page-width specialist-section__inner">
    <div class="specialist-section__image">
      {% if section.settings.image != blank %}
        {{
          section.settings.image
          | image_url: width: 1000
          | image_tag: loading: 'lazy', widths: '400, 600, 800, 1000', alt: section.settings.heading
        }}
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
    <div class="specialist-section__content">
      {% if section.settings.heading != blank %}
        <h2 class="specialist-section__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.email != blank %}
        <a class="specialist-section__email" href="mailto:{{ section.settings.email }}">
          {{ section.settings.email }}
        </a>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="specialist-section__description">{{ section.settings.description }}</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Talk to a specialist",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Specialist image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Talk To A Specialist"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "vicarexhealth@gmail.com"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "From recommendations to answering questions, we're here to help, 24/7."
    }
  ],
  "presets": [
    {
      "name": "Talk to a specialist"
    }
  ]
}
{% endschema %}


