{{ 'section-featured-category-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="category-grid section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="category-grid__heading">
        <h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p>{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="category-grid__items">
      {% for block in section.blocks %}
        {% assign layout_class = 'category-grid__item--standard' %}
        {% case forloop.index %}
          {% when 1 %}
            {% assign layout_class = 'category-grid__item--wide' %}
          {% when 4 %}
            {% assign layout_class = 'category-grid__item--wide' %}
        {% endcase %}

        {% assign fallback_asset = '' %}
        {% case forloop.index %}
          {% when 1 %}
            {% assign fallback_asset = 'category-patient-provider.jpg' %}
          {% when 2 %}
            {% assign fallback_asset = 'category-wound-care.jpg' %}
          {% when 3 %}
            {% assign fallback_asset = 'category-protective-gear.jpg' %}
          {% when 4 %}
            {% assign fallback_asset = 'category-sanitation.jpg' %}
          {% when 5 %}
            {% assign fallback_asset = 'category-custom-kits.jpg' %}
          {% when 6 %}
            {% assign fallback_asset = 'category-general-medical.jpg' %}
        {% endcase %}

        {% if block.settings.image != blank %}
          {% assign background_image = block.settings.image | image_url: width: 1600 %}
        {% elsif fallback_asset != '' %}
          {% assign background_image = fallback_asset | asset_url %}
        {% else %}
          {% assign background_image = '' %}
        {% endif %}

        <div
          class="category-grid__item {{ layout_class }}"
          {{ block.shopify_attributes }}
          style="{% if background_image != '' %}background-image: url({{ background_image }});{% endif %}"
        >
          <div class="category-grid__content">
            <div class="category-grid__text color-{{ section.settings.text_color_scheme }} gradient">
              {% if block.settings.title != blank %}
                <h3>{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.subtitle != blank %}
                <p>{{ block.settings.subtitle }}</p>
              {% endif %}
              {% if block.settings.button_label != blank %}
                <a
                  class="button button--transparent category-grid__button"
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured category grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "What We Offer",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "default": "h2",
      "options": [
        { "value": "h4", "label": "Small" },
        { "value": "h3", "label": "Medium" },
        { "value": "h2", "label": "Large" },
        { "value": "h1", "label": "Extra large" }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Color scheme"
    },
    {
      "type": "color_scheme",
      "id": "text_color_scheme",
      "default": "scheme-3",
      "label": "Text panel color scheme"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured category grid",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}

