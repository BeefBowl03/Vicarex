{{ 'section-about-us-mission-vision.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="isolate page-width">
  <div class="about-us-mission-vision content-container color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
    <!-- Container 1: Mission (left) + Image (right) -->
    <div class="about-us-mission-vision__container about-us-mission-vision__container--mission">
      <div class="about-us-mission-vision__column about-us-mission-vision__column--content">
        {%- for block in section.blocks -%}
          {%- if block.type == 'mission_heading' -%}
            <h2 class="about-us-mission-vision__heading {{ section.settings.heading_size }}" {{ block.shopify_attributes }}>
              {{ block.settings.heading }}
            </h2>
          {%- elsif block.type == 'mission_text' -%}
            <div class="about-us-mission-vision__text rte" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
      
      <div class="about-us-mission-vision__column about-us-mission-vision__column--image">
        {%- assign mission_image_found = false -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'mission_media' and block.settings.image != blank -%}
            {%- assign mission_image_found = true -%}
            <div class="about-us-mission-vision__image" {{ block.shopify_attributes }}>
              {{
                block.settings.image
                | image_url: width: 800
                | image_tag: loading: 'lazy', alt: block.settings.image.alt
              }}
            </div>
          {%- endif -%}
        {%- endfor -%}
        {%- unless mission_image_found -%}
          <div class="about-us-mission-vision__image about-us-mission-vision__image--placeholder">
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endunless -%}
      </div>
    </div>
    
    <!-- Container 2: Image (left) + Vision (right) -->
    <div class="about-us-mission-vision__container about-us-mission-vision__container--vision">
      <div class="about-us-mission-vision__column about-us-mission-vision__column--image">
        {%- assign vision_image_found = false -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'vision_media' and block.settings.image != blank -%}
            {%- assign vision_image_found = true -%}
            <div class="about-us-mission-vision__image" {{ block.shopify_attributes }}>
              {{
                block.settings.image
                | image_url: width: 800
                | image_tag: loading: 'lazy', alt: block.settings.image.alt
              }}
            </div>
          {%- endif -%}
        {%- endfor -%}
        {%- unless vision_image_found -%}
          <div class="about-us-mission-vision__image about-us-mission-vision__image--placeholder">
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endunless -%}
      </div>
      
      <div class="about-us-mission-vision__column about-us-mission-vision__column--content">
        {%- for block in section.blocks -%}
          {%- if block.type == 'vision_heading' -%}
            <h2 class="about-us-mission-vision__heading {{ section.settings.heading_size }}" {{ block.shopify_attributes }}>
              {{ block.settings.heading }}
            </h2>
          {%- elsif block.type == 'vision_text' -%}
            <div class="about-us-mission-vision__text rte" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Us Mission Vision",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "mission_media",
      "name": "Mission Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "mission_heading",
      "name": "Mission Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading",
          "default": "⭐ OUR MISSION"
        }
      ]
    },
    {
      "type": "mission_text",
      "name": "Mission Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add your text here.</p>"
        }
      ]
    },
    {
      "type": "vision_media",
      "name": "Vision Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "vision_heading",
      "name": "Vision Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading",
          "default": "⭐ OUR VISION"
        }
      ]
    },
    {
      "type": "vision_text",
      "name": "Vision Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add your text here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Us Mission Vision"
    }
  ]
}
{% endschema %}

